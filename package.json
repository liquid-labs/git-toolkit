{
  "name": "@liquid-labs/git-toolkit",
  "version": "1.0.0-alpha.0",
  "description": "Toolkit of git-based tools to examine git repositories.",
  "files": [
    "dist/"
  ],
  "bin": {
    "gtk": "dist/gtk.sh"
  },
  "scripts": {
    "prebuild": "command -v rollup-bash >/dev/null && rm -rf ./dist",
    "build": "mkdir -p dist && rollup-bash ./bash/gtk.sh ./dist/gtk.sh && rollup-bash ./bash/install.sh ./dist/install.sh",
    "watch": "watch 'npm run build' ./bash ./bin",
    "lint": "catalyst-scripts lint",
    "lint-fix": "catalyst-scripts lint-fix",
    "pretest": "TEST_TYPES=unit catalyst-scripts pretest && mkdir -p test-tmp/ && npm run build",
    "test": "catalyst-scripts test",
    "posttest": "rm -rf test-tmp/",
    "install": "./dist/install.sh",
    "clean": "rm -rf package-lock.json node_modules/ dist/",
    "preversion": "npm test",
    "version": "npm run build && git add -fA dist",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build"
  },
  "keywords": [
    "git",
    "toolkit"
  ],
  "author": "Zane Rockenbaugh <zane@liquid-labs.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Liquid-Labs/git-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/Liquid-Labs/git-toolkit/issues"
  },
  "homepage": "https://github.com/Liquid-Labs/git-toolkit#readme",
  "liquidDev": {
    "orgBase": "git@github.com:Liquid-Labs/Liquid-Labs.git"
  },
  "devDependencies": {
    "@liquid-labs/bash-toolkit": "^1.0.0-alpha.42",
    "watch": "^1.0.2"
  }
}
